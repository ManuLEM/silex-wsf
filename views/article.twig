{% extends 'layout.twig' %}
{% block title %}Add Artcile{% endblock %}

{% block content %}
	<article>
		<h1>{{ article.title }}</h1>
		<p>
			{{ article.body }}
		</p>
		{% if article.tags[''] is not defined %}
			<p>
				tags :
				{% for key, tag in article.tags %}
					<a class="tag" href="{{ app.url_generator.generate('tagSearch', {tagId: key}) }}">{{ tag }}</a>
				{% endfor %}
			</p>
		{% endif %}
	</article>
{% endblock %}